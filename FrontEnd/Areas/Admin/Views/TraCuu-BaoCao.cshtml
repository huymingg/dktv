                $('#dateTo').on('focus', function () {
                    this.type = 'date';
                }).on('blur', function () {
                    if (!this.value) {
                        this.type = 'text';
                    }
                });
                function GetStatus() {
                    $.ajax({
                        url: "http://localhost:5070/api/TraCuuBaoCao/get-report-statuses", // URL của API mới
                        type: "GET",
                        success: function (response) {
                            let select = $("#trangThai");
                            select.empty().append('<option value="" selected>--Trạng thái--</option>');

                            // Dữ liệu trả về là một mảng chuỗi đơn giản
                            if (Array.isArray(response)) {
                                response.forEach(statusText => {
                                    // Gán cả value và text là tên trạng thái
                                    select.append($('<option></option>').val(statusText).text(statusText));
                                });
                            }
                        },
                        error: function () {
                            console.error("Không thể tải trạng thái duyệt đăng ký");
                        }
                    });
                }

                // Hàm định dạng ngày tháng
                function formatDate(data) {
                    if (!data) return "";
                    var date = new Date(data);
                    var day = ("0" + date.getDate()).slice(-2);
                    var month = ("0" + (date.getMonth() + 1)).slice(-2);
                    var year = date.getFullYear();
                    return day + '-' + month + '-' + year;
                }

                // Hàm này sẽ chạy sau khi trang đã tải xong
                $(document).ready(function () {

                    // Khai báo một biến để lưu ID của góp ý đang được chọn
                    let selectedFeedbackId = null;

                    // Khởi tạo DataTable và lưu vào một biến
                    if ($.fn.DataTable.isDataTable('#dataTable')) {
                        $('#dataTable').DataTable().destroy();
                    }
                    loadRegistrations()
                    function loadRegistrations() {
                        $.ajax({
                            url: "http://localhost:5070/api/TraCuuBaoCao/get-look-up",
                            type: "GET",
                            dataType: "json",
                            success: function (data) {
                                // Kiểm tra nếu DataTable đã được khởi tạo
                                if ($.fn.DataTable.isDataTable('#dataTable')) {
                                    var table = $('#dataTable').DataTable();
                                    table.clear().rows.add(data).draw();
                                } else {
                                    $('#dataTable').DataTable({
                                        data: data,
                                        columns: [
                                            { data: "registrationcode" },
                                            { data: "fullName" },
                                            { data: "cardtype" },
                                            { data: "tel" },
                                            {
                                                data: "createddate",
                                                render: function (data) {
                                                    return formatDate(data);
                                                }
                                            },
                                            {
                                                data: "status",
                                                render: function (data) {
                                                    return convertStatus(data); // phải gọi ở đây
                                                }
                                            }
                                        ]
                                    });
                                }
                            },
                            error: function (xhr, status, error) {
                                console.error("Lỗi khi gọi API:", error);
                            }
                        });
                    }



                    // Gắn sự kiện click để MỞ MODAL
                    $('#dataTable tbody').on('click', 'a.feedback-link', function (e) {
                        e.preventDefault();
                        var feedbackId = $(this).data('id');

                        // Lưu ID vào biến toàn cục
                        selectedFeedbackId = feedbackId;

                        $.ajax({
                            url: `http://localhost:5070/api/TraCuuBaoCao/get-report-details/${feedbackId}`,
                            type: 'GET',
                            success: function (response) {
                                $('#modalTitle').text(response.title);
                                $('#modalFullName').text(response.fullName);
                                $('#modalEmail').text(response.email);
                                $('#modalStatus').text(response.status);
                                $('#modalDate').text(formatDate(response.createdDate));
                                $('#modalContent').text(response.content);
                                $('#feedbackModal').modal('show');
                            },
                            error: function () {
                                alert('Không thể tải báo cáo.');
                            }
                        });
                    });

                    // Gắn sự kiện click cho nút DUYỆT
                    $('#approve-button').on('click', function () {
                        // Sử dụng biến toàn cục đã lưu
                        if (!selectedFeedbackId) {
                            alert('Không tìm thấy bản báo cáo.');
